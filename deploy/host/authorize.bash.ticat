help = setup hosts' ssh authorization
abbr = auth

interact = true

[arg]
hosts|host|h = ''
password|pwd|p = ''
deploy-user|user|usr|u = root
key-file-abs-path|key-file|key|k = ''

[arg2env]
deploy.hosts = hosts
deploy.user = deploy-user
ssh.pwd = password
ssh.key-file = key-file-abs-path

[env]
deploy.hosts = read
deploy.user = read
ssh.pwd = may-read : delete

[dep]
ssh-keygen = to gen ssh key
sshpass = to re-use the ssh passphrase
